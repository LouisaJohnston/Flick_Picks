<h1>Your Favorite Movies</h1>

<% movies.forEach(movie=> { %>
    <div>
        <h3>
            <a href="/movies/<%= movie.title %>"><%= movie.title %></a>
        </h3>
    </div>
<% }) %>

<p>Search for a title to add to your list</p>
<form action="/movies/results" method="GET">
    <input type="text" name="search" />  
  
    <input type="submit" />
  </form>