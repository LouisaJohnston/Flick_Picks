<h1 class="list-header">Your Movielog</h1>
<h3 class="page-descriptor">Keep track of movies that you've already seen</h3>

<div class="list-container">
    <% movielogs.forEach(movielog => { %>
        <div>
            <a href="/movielog/movie/<%= movielog.imdbID %>"><h3><%= movielog.title %></h3></a>
            <p><% movielog.rating %></p>
        </div>
    <% }) %>
</div>

<div class="form-container form-align-with-list">
    <p>Search for a title to add to your Movielog</p>
    <form class="align-with-list" action="/movielog/results" method="GET">
        <input type="text" name="search" />  
        <input type="submit" />
    </form>
</div>