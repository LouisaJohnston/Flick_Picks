<h1 class="list-header">Watchlist</h1>

<div class="list-container">
    <% watchlists.forEach(watchlist => { %>
        <div>
            <a href="/watchlist/movie/<%= watchlist.imdbID %>"><h3><%= watchlist.title %></h3></a>
            <p><% watchlist.comment %></p>
        </div>
    <% }) %>
</div>

<div class="form-container form-align-with-list">
    <p>Search for a title to add to your Watchlist</p>
    <form class="align-with-list" action="/watchlist/results" method="GET" target="_blank">
        <input type="text" name="search" />  
        <input type="submit" />
    </form>
</div>